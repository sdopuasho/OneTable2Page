<Page x:Class="Load3Window.PageGrid"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Load3Window"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageGrid">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="DgridPageGrid"/>
        <Button x:Name="NewBtn" Content="Добавить" HorizontalAlignment="Center" VerticalAlignment="Top" Width="100" Height="35" Grid.Column="1" Click="NewBtn_Click"/>
    </Grid>
</Page>
